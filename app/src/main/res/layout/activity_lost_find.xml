<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
              xmlns:tools="http://schemas.android.com/tools"
              android:layout_width="match_parent"
              android:layout_height="match_parent"
              android:orientation="vertical"
              tools:context="mobilesafe.itheima.com.mobilesafe.LostFindActivity">

    <TextView
        style="@style/page_title_style"
        android:text="手机防盗"/>


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:text="安全号码"
            android:textColor="#000"
            android:textSize="20dip"
            />

        <TextView
            android:id="@+id/tv_safernumber"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:text="xxx"
            android:textSize="20dip"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dip"
        android:layout_marginTop="10dip"
        android:background="#44000000"
        />


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="10dip"
            android:layout_marginTop="10dip"
            android:text="防盗保护是否开启"
            android:textColor="#000"
            android:textSize="20dip"
            />

        <ImageView
            android:id="@+id/iv_protecting"
            android:layout_width="25dip"
            android:layout_height="25dip"
            android:layout_alignParentRight="true"
            android:layout_marginRight="10dip"
            android:layout_marginTop="10dip"
            android:src="@drawable/unlock"
            />
    </RelativeLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dip"
        android:layout_marginTop="10dip"
        android:background="#44000000"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:background="@drawable/shape_selector"
        android:clickable="true"
        android:onClick="reEnterSetup"
        android:text="重新进入设置向导"
        android:textColor="#000"
        android:textSize="20dip"
        />

    <View
        android:layout_width="match_parent"
        android:layout_height="0.2dip"
        android:layout_marginTop="10dip"
        android:background="#44000000"
        />


    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="10dip"
        android:layout_marginTop="10dip"
        android:background="#44000000"
        android:text="功能简介"
        android:textColor="#000"
        android:textSize="20dip"
        />


    <TextView
        style="@style/setup_content_style"
        android:drawableLeft="@android:drawable/star_on"
        android:text="GPS追踪：#*location*#"
        />

    <TextView
        style="@style/setup_content_style"
        android:drawableLeft="@android:drawable/star_on"
        android:text="播放报警音乐：#*alarm*#"
        />

    <TextView
        style="@style/setup_content_style"
        android:drawableLeft="@android:drawable/star_on"
        android:text="远程数据销毁：#*wipedata*#"
        />


    <TextView
        style="@style/setup_content_style"
        android:drawableLeft="@android:drawable/star_on"
        android:text="远程锁屏：#*locks*#"
        />
</LinearLayout>
